{% comment %}
  Shopping cart page template
{% endcomment %}

<div class="cart-page">
  <div class="container">
    <h1 class="cart-title">Shopping Cart</h1>
    
    {% if cart.item_count > 0 %}
      <div class="cart-content">
        <form action="{{ routes.cart_url }}" method="post" novalidate class="cart-form">
          <div class="cart-items">
            {% for item in cart.items %}
              <div class="cart-item" data-index="{{ forloop.index }}">
                <div class="cart-item-image">
                  {% if item.image %}
                    <img src="{{ item.image | image_url: width: 150 }}" 
                         alt="{{ item.image.alt | escape }}"
                         loading="lazy">
                  {% endif %}
                </div>
                
                <div class="cart-item-details">
                  <h3 class="cart-item-title">
                    <a href="{{ item.url }}">{{ item.product.title }}</a>
                  </h3>
                  
                  {% unless item.product.has_only_default_variant %}
                    <div class="cart-item-variant">
                      {% for option in item.options_with_values %}
                        <span class="variant-option">{{ option.name }}: {{ option.value }}</span>
                      {% endfor %}
                    </div>
                  {% endunless %}
                  
                  <div class="cart-item-price">
                    {% if item.original_price != item.final_price %}
                      <span class="price-sale">{{ item.final_price | money }}</span>
                      <span class="price-compare">{{ item.original_price | money }}</span>
                    {% else %}
                      <span class="price">{{ item.final_price | money }}</span>
                    {% endif %}
                  </div>
                </div>
                
                <div class="cart-item-quantity">
                  <div class="quantity-selector">
                    <button type="button" 
                            class="quantity-btn minus" 
                            data-index="{{ forloop.index }}"
                            aria-label="Decrease quantity">-</button>
                    <input type="number" 
                           name="updates[]" 
                           value="{{ item.quantity }}" 
                           min="0" 
                           class="quantity-input"
                           data-index="{{ forloop.index }}">
                    <button type="button" 
                            class="quantity-btn plus" 
                            data-index="{{ forloop.index }}"
                            aria-label="Increase quantity">+</button>
                  </div>
                </div>
                
                <div class="cart-item-total">
                  <span class="item-total">{{ item.final_line_price | money }}</span>
                </div>
                
                <div class="cart-item-remove">
                  <button type="button" 
                          class="remove-item-btn" 
                          data-index="{{ forloop.index }}"
                          aria-label="Remove item">
                    {% render 'icon-close' %}
                  </button>
                </div>
              </div>
            {% endfor %}
          </div>
          
          <div class="cart-footer">
            <div class="cart-actions">
              <button type="submit" class="btn btn-secondary update-cart-btn">
                Update Cart
              </button>
              <a href="{{ routes.collections_url }}" class="btn btn-secondary">
                Continue Shopping
              </a>
            </div>
            
            <div class="cart-summary">
              <div class="cart-subtotal">
                <span class="subtotal-label">Subtotal:</span>
                <span class="subtotal-amount">{{ cart.total_price | money }}</span>
              </div>
              
              {% if cart.cart_level_discount_applications.size > 0 %}
                <div class="cart-discounts">
                  {% for discount in cart.cart_level_discount_applications %}
                    <div class="cart-discount">
                      <span class="discount-title">{{ discount.title }}</span>
                      <span class="discount-amount">-{{ discount.total_allocated_amount | money }}</span>
                    </div>
                  {% endfor %}
                </div>
              {% endif %}
              
              <div class="cart-checkout">
                <p class="checkout-note">Shipping and taxes calculated at checkout</p>
                <button type="submit" 
                        name="add" 
                        class="btn btn-primary checkout-btn"
                        formaction="{{ routes.cart_url }}"
                        formmethod="post">
                  Checkout
                </button>
              </div>
            </div>
          </div>
        </form>
      </div>
    {% else %}
      <div class="empty-cart">
        <h2>Your cart is empty</h2>
        <p>Add some products to get started.</p>
        <a href="{{ routes.collections_url }}" class="btn btn-primary">
          Start Shopping
        </a>
      </div>
    {% endif %}
  </div>
</div>

<style>
.cart-page {
  padding: 60px 0;
  min-height: 60vh;
}

.cart-title {
  text-align: center;
  margin-bottom: 60px;
  font-size: 2.5rem;
}

.cart-items {
  margin-bottom: 40px;
}

.cart-item {
  display: grid;
  grid-template-columns: 100px 1fr auto auto auto;
  gap: 20px;
  align-items: center;
  padding: 30px 0;
  border-bottom: 1px solid #e0e0e0;
}

.cart-item-image img {
  width: 100%;
  height: auto;
  border-radius: 4px;
}

.cart-item-title a {
  text-decoration: none;
  color: #1b1b1b;
  font-weight: 600;
  font-size: 16px;
}

.cart-item-variant {
  margin-top: 5px;
  font-size: 14px;
  color: #666;
}

.variant-option {
  margin-right: 10px;
}

.cart-item-price {
  margin-top: 10px;
}

.price-sale {
  color: #ff4444;
  margin-right: 10px;
}

.price-compare {
  color: #999;
  text-decoration: line-through;
  font-size: 14px;
}

.quantity-selector {
  display: flex;
  align-items: center;
  border: 1px solid #e0e0e0;
  border-radius: 4px;
  overflow: hidden;
}

.quantity-btn {
  width: 40px;
  height: 40px;
  border: none;
  background: #f8f9fa;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.3s ease;
}

.quantity-btn:hover {
  background-color: #e9ecef;
}

.quantity-input {
  width: 60px;
  height: 40px;
  border: none;
  text-align: center;
  font-weight: 600;
  background: white;
}

.cart-item-total {
  font-weight: 700;
  font-size: 16px;
}

.remove-item-btn {
  background: none;
  border: none;
  cursor: pointer;
  padding: 5px;
  border-radius: 4px;
  color: #999;
  transition: color 0.3s ease;
}

.remove-item-btn:hover {
  color: #ff4444;
}

.remove-item-btn svg {
  width: 20px;
  height: 20px;
}

.cart-footer {
  border-top: 2px solid #e0e0e0;
  padding-top: 40px;
  display: grid;
  grid-template-columns: 1fr 400px;
  gap: 60px;
  align-items: start;
}

.cart-actions {
  display: flex;
  gap: 20px;
}

.cart-summary {
  background: #f8f9fa;
  padding: 30px;
  border-radius: 8px;
}

.cart-subtotal {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
  font-size: 18px;
  font-weight: 600;
}

.cart-discounts {
  margin-bottom: 20px;
}

.cart-discount {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
  color: #28a745;
}

.cart-checkout {
  border-top: 1px solid #e0e0e0;
  padding-top: 20px;
}

.checkout-note {
  font-size: 14px;
  color: #666;
  margin-bottom: 20px;
  text-align: center;
}

.checkout-btn {
  width: 100%;
  font-size: 16px;
  padding: 15px;
}

.empty-cart {
  text-align: center;
  padding: 80px 20px;
}

.empty-cart h2 {
  margin-bottom: 20px;
  font-size: 2rem;
}

.empty-cart p {
  margin-bottom: 30px;
  color: #666;
  font-size: 1.1rem;
}

/* Mobile Responsive */
@media screen and (max-width: 768px) {
  .cart-item {
    grid-template-columns: 80px 1fr;
    gap: 15px;
  }
  
  .cart-item-quantity,
  .cart-item-total,
  .cart-item-remove {
    grid-column: 1 / -1;
    justify-self: start;
  }
  
  .cart-footer {
    grid-template-columns: 1fr;
    gap: 40px;
  }
  
  .cart-actions {
    flex-direction: column;
  }
}

@media screen and (max-width: 480px) {
  .cart-title {
    font-size: 2rem;
  }
  
  .cart-item {
    grid-template-columns: 60px 1fr;
    gap: 10px;
    padding: 20px 0;
  }
}
</style>

<script>
// Quantity controls
document.querySelectorAll('.quantity-btn').forEach(btn => {
  btn.addEventListener('click', function() {
    const index = this.dataset.index;
    const input = document.querySelector(`input[data-index="${index}"]`);
    const currentValue = parseInt(input.value);
    
    if (this.classList.contains('plus')) {
      input.value = currentValue + 1;
    } else if (this.classList.contains('minus') && currentValue > 1) {
      input.value = currentValue - 1;
    }
    
    // Auto-update cart
    input.form.submit();
  });
});

// Remove item
document.querySelectorAll('.remove-item-btn').forEach(btn => {
  btn.addEventListener('click', function() {
    const index = this.dataset.index;
    const input = document.querySelector(`input[data-index="${index}"]`);
    input.value = 0;
    input.form.submit();
  });
});

// Auto-update on quantity change
document.querySelectorAll('.quantity-input').forEach(input => {
  input.addEventListener('change', function() {
    if (parseInt(this.value) < 0) {
      this.value = 0;
    }
    this.form.submit();
  });
});
</script>

{%- liquid
  assign heading = section.settings.heading | default: 'What our customers say'
-%}

<div class="testimonials section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    {%- if heading != blank -%}
      <div class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin">
        <h2 id="SectionHeading-{{ section.id }}" class="title inline-richtext {{ section.settings.heading_size }}">
          {{ heading }}
        </h2>
      </div>
    {%- endif -%}

    <div class="testimonials-grid">
      {%- for block in section.blocks -%}
        <div class="testimonial-item" {{ block.shopify_attributes }}>
          <div class="testimonial-content">
            {%- if block.settings.rating > 0 -%}
              <div class="testimonial-rating">
                {%- for i in (1..5) -%}
                  {%- if i <= block.settings.rating -%}
                    <span class="star star--filled">★</span>
                  {%- else -%}
                    <span class="star">☆</span>
                  {%- endif -%}
                {%- endfor -%}
              </div>
            {%- endif -%}
            
            {%- if block.settings.testimonial != blank -%}
              <blockquote class="testimonial-text">
                "{{ block.settings.testimonial }}"
              </blockquote>
            {%- endif -%}
            
            <div class="testimonial-author">
              {%- if block.settings.customer_name != blank -%}
                <cite class="customer-name">{{ block.settings.customer_name }}</cite>
              {%- endif -%}
              {%- if block.settings.customer_title != blank -%}
                <span class="customer-title">{{ block.settings.customer_title }}</span>
              {%- endif -%}
            </div>
          </div>
        </div>
      {%- else -%}
        {%- comment -%} Default testimonials if no blocks are added {%- endcomment -%}
        <div class="testimonial-item">
          <div class="testimonial-content">
            <div class="testimonial-rating">
              <span class="star star--filled">★</span>
              <span class="star star--filled">★</span>
              <span class="star star--filled">★</span>
              <span class="star star--filled">★</span>
              <span class="star star--filled">★</span>
            </div>
            <blockquote class="testimonial-text">
              "Amazing quality and fast shipping! I love my new purchase and will definitely be ordering again."
            </blockquote>
            <div class="testimonial-author">
              <cite class="customer-name">Sarah Johnson</cite>
              <span class="customer-title">Verified Customer</span>
            </div>
          </div>
        </div>
        
        <div class="testimonial-item">
          <div class="testimonial-content">
            <div class="testimonial-rating">
              <span class="star star--filled">★</span>
              <span class="star star--filled">★</span>
              <span class="star star--filled">★</span>
              <span class="star star--filled">★</span>
              <span class="star star--filled">★</span>
            </div>
            <blockquote class="testimonial-text">
              "Excellent customer service and the product exceeded my expectations. Highly recommended!"
            </blockquote>
            <div class="testimonial-author">
              <cite class="customer-name">Michael Chen</cite>
              <span class="customer-title">Verified Customer</span>
            </div>
          </div>
        </div>
        
        <div class="testimonial-item">
          <div class="testimonial-content">
            <div class="testimonial-rating">
              <span class="star star--filled">★</span>
              <span class="star star--filled">★</span>
              <span class="star star--filled">★</span>
              <span class="star star--filled">★</span>
              <span class="star star--filled">★</span>
            </div>
            <blockquote class="testimonial-text">
              "Great value for money and beautiful design. This is exactly what I was looking for!"
            </blockquote>
            <div class="testimonial-author">
              <cite class="customer-name">Emma Rodriguez</cite>
              <span class="customer-title">Verified Customer</span>
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<style>
  .testimonials {
    text-align: center;
  }
  
  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }
  
  .testimonial-item {
    background: rgba(var(--color-base-background-2), 0.5);
    padding: 2rem;
    border-radius: var(--text-boxes-radius);
    border: var(--text-boxes-border-width) solid rgba(var(--color-base-text), var(--text-boxes-border-opacity));
  }
  
  .testimonial-rating {
    margin-bottom: 1rem;
  }
  
  .star {
    color: #ffa500;
    font-size: 1.2rem;
    margin-right: 0.2rem;
  }
  
  .star--filled {
    color: #ff8c00;
  }
  
  .testimonial-text {
    font-style: italic;
    margin: 1rem 0;
    font-size: 1.1rem;
    line-height: 1.5;
  }
  
  .testimonial-author {
    margin-top: 1.5rem;
  }
  
  .customer-name {
    font-weight: bold;
    display: block;
    margin-bottom: 0.25rem;
  }
  
  .customer-title {
    opacity: 0.7;
    font-size: 0.9rem;
  }
  
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  
  @media screen and (max-width: 749px) {
    .testimonials-grid {
      grid-template-columns: 1fr;
    }
    
    .testimonial-item {
      padding: 1.5rem;
    }
  }
</style>

{% schema %}
{
  "name": "Testimonials",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "What our customers say",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2", 
          "label": "Accent 2"
        },
        {
          "value": "background-1",
          "label": "Background 1"
        },
        {
          "value": "background-2",
          "label": "Background 2"
        },
        {
          "value": "inverse",
          "label": "Inverse"
        }
      ],
      "default": "background-1",
      "label": "Color scheme"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "testimonial",
          "default": "This product exceeded my expectations. Great quality and fast shipping!",
          "label": "Testimonial text"
        },
        {
          "type": "text",
          "id": "customer_name",
          "default": "Customer Name",
          "label": "Customer name"
        },
        {
          "type": "text",
          "id": "customer_title",
          "default": "Verified Customer",
          "label": "Customer title"
        },
        {
          "type": "range",
          "id": "rating",
          "min": 0,
          "max": 5,
          "step": 1,
          "default": 5,
          "label": "Star rating"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "blocks": [
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %}

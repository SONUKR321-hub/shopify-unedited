{%- liquid
  assign collections_to_show = section.settings.collections_to_show | default: 3
  assign heading = section.settings.heading | default: 'Featured Collections'
-%}

<div class="featured-collections section-{{ section.id }}-padding">
  <div class="page-width">
    {%- if heading != blank -%}
      <div class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin">
        <h2 id="SectionHeading-{{ section.id }}" class="title inline-richtext {{ section.settings.heading_size }}">
          {{ heading }}
        </h2>
      </div>
    {%- endif -%}

    <div class="collection-list-wrapper">
      <ul class="collection-list grid grid--1-col grid--3-col-tablet grid--{{ collections_to_show }}-col-desktop" role="list">
        {%- liquid
          case collections_to_show
            when 1
              assign collections = collections | slice: 0, 1
            when 2
              assign collections = collections | slice: 0, 2
            when 3
              assign collections = collections | slice: 0, 3
            when 4
              assign collections = collections | slice: 0, 4
            when 5
              assign collections = collections | slice: 0, 5
            else
              assign collections = collections | slice: 0, 3
          endcase
        -%}

        {%- for collection in collections limit: collections_to_show -%}
          <li class="collection-list__item grid__item">
            <div class="card-wrapper animate-arrow">
              <div class="card card--standard card--media">
                <div class="card__inner">
                  <div class="card__media">
                    <div class="media media--transparent media--hover-effect">
                      {%- if collection.featured_image -%}
                        <img
                          srcset="{%- if collection.featured_image.width >= 165 -%}{{ collection.featured_image | image_url: width: 165 }} 165w,{%- endif -%}
                                  {%- if collection.featured_image.width >= 330 -%}{{ collection.featured_image | image_url: width: 330 }} 330w,{%- endif -%}
                                  {%- if collection.featured_image.width >= 535 -%}{{ collection.featured_image | image_url: width: 535 }} 535w,{%- endif -%}
                                  {%- if collection.featured_image.width >= 750 -%}{{ collection.featured_image | image_url: width: 750 }} 750w,{%- endif -%}
                                  {%- if collection.featured_image.width >= 1070 -%}{{ collection.featured_image | image_url: width: 1070 }} 1070w,{%- endif -%}
                                  {%- if collection.featured_image.width >= 1500 -%}{{ collection.featured_image | image_url: width: 1500 }} 1500w,{%- endif -%}
                                  {{ collection.featured_image | image_url }} {{ collection.featured_image.width }}w"
                          src="{{ collection.featured_image | image_url: width: 535 }}"
                          sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 3 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
                          alt="{{ collection.featured_image.alt | escape }}"
                          height="{{ collection.featured_image.height }}"
                          width="{{ collection.featured_image.width }}"
                          loading="lazy"
                          class="motion-reduce"
                        >
                      {%- else -%}
                        {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
                      {%- endif -%}
                    </div>
                  </div>
                  <div class="card__content">
                    <div class="card__information">
                      <h3 class="card__heading">
                        <a href="{{ collection.url }}" class="full-unstyled-link">
                          {{ collection.title | escape }}
                        </a>
                      </h3>
                      {%- if collection.description != blank -%}
                        <p class="card__caption">{{ collection.description | strip_html | truncatewords: 12 }}</p>
                      {%- endif -%}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </li>
        {%- else -%}
          {%- for i in (1..collections_to_show) -%}
            <li class="collection-list__item grid__item">
              <div class="card-wrapper animate-arrow">
                <div class="card card--standard card--media">
                  <div class="card__inner">
                    <div class="card__media">
                      <div class="media media--transparent">
                        {{ 'collection-' | append: forloop.index | placeholder_svg_tag: 'placeholder-svg' }}
                      </div>
                    </div>
                    <div class="card__content">
                      <div class="card__information">
                        <h3 class="card__heading">
                          <a href="#" class="full-unstyled-link">
                            Example Collection {{ forloop.index }}
                          </a>
                        </h3>
                        <p class="card__caption">This is a placeholder for your collection description.</p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </li>
          {%- endfor -%}
        {%- endfor -%}
      </ul>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Featured Collections",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Featured Collections",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "range",
      "id": "collections_to_show",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 3,
      "label": "Number of collections to show"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Featured Collections"
    }
  ]
}
{% endschema %}

{{ 'hero-banner.css' | asset_url | stylesheet_tag }}

<div class="hero-banner">
  <div class="hero-content">
    {% if section.settings.image != blank %}
      <div class="hero-image">
        <img src="{{ section.settings.image | image_url: width: 1920 }}" 
             alt="{{ section.settings.image.alt | escape }}"
             loading="lazy">
      </div>
    {% endif %}
    
    <div class="hero-text">
      {% if section.settings.heading != blank %}
        <h1 class="hero-heading">{{ section.settings.heading }}</h1>
      {% endif %}
      
      {% if section.settings.subheading != blank %}
        <p class="hero-subheading">{{ section.settings.subheading }}</p>
      {% endif %}
      
      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="btn btn-primary hero-btn">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

<style>
.hero-banner {
  position: relative;
  min-height: 600px;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
}

.hero-content {
  position: relative;
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
  text-align: center;
  z-index: 2;
}

.hero-image {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}

.hero-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hero-text {
  position: relative;
  z-index: 3;
  color: white;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}

.hero-heading {
  font-size: 3.5rem;
  font-weight: 700;
  margin-bottom: 20px;
  line-height: 1.2;
}

.hero-subheading {
  font-size: 1.25rem;
  margin-bottom: 30px;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
}

.hero-btn {
  font-size: 16px;
  padding: 15px 30px;
  margin-top: 20px;
}

@media screen and (max-width: 768px) {
  .hero-banner {
    min-height: 400px;
  }
  
  .hero-heading {
    font-size: 2.5rem;
  }
  
  .hero-subheading {
    font-size: 1.1rem;
  }
}

@media screen and (max-width: 480px) {
  .hero-heading {
    font-size: 2rem;
  }
  
  .hero-subheading {
    font-size: 1rem;
  }
  
  .hero-content {
    padding: 0 15px;
  }
}
</style>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "hero-banner-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to UOMO"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover the latest fashion trends and premium quality clothing"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}

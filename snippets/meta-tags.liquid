{%- comment -%}
  Meta tags for SEO and social media sharing
{%- endcomment -%}

{%- comment -%} Open Graph meta tags {%- endcomment -%}
<meta property="og:site_name" content="{{ shop.name }}">
<meta property="og:url" content="{{ canonical_url }}">
<meta property="og:title" content="{{ page_title | default: shop.name }}">
<meta property="og:type" content="website">
<meta property="og:description" content="{{ page_description | default: shop.description | strip_html | truncatewords: 25 }}">

{%- if page_image -%}
  <meta property="og:image" content="http:{{ page_image | image_url: width: 1200, height: 630 }}">
  <meta property="og:image:secure_url" content="https:{{ page_image | image_url: width: 1200, height: 630 }}">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
{%- endif -%}

{%- comment -%} Twitter Card meta tags {%- endcomment -%}
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ page_title | default: shop.name }}">
<meta name="twitter:description" content="{{ page_description | default: shop.description | strip_html | truncatewords: 25 }}">

{%- if page_image -%}
  <meta name="twitter:image" content="https:{{ page_image | image_url: width: 1200, height: 630 }}">
{%- endif -%}

{%- comment -%} Additional SEO meta tags {%- endcomment -%}
{%- if template.name == 'product' -%}
  <meta property="og:type" content="product">
  <meta property="product:brand" content="{{ product.vendor }}">
  <meta property="product:availability" content="{% if product.available %}in stock{% else %}out of stock{% endif %}">
  <meta property="product:condition" content="new">
  <meta property="product:price:amount" content="{{ product.price | money_without_currency | remove: ',' }}">
  <meta property="product:price:currency" content="{{ cart.currency.iso_code }}">
{%- endif -%}

{%- if template.name == 'article' -%}
  <meta property="og:type" content="article">
  <meta property="article:published_time" content="{{ article.published_at | date: '%Y-%m-%d' }}">
  <meta property="article:author" content="{{ article.author }}">
{%- endif -%}

{%- comment -%} Robots meta tag {%- endcomment -%}
{%- unless settings.password_page_enabled -%}
  <meta name="robots" content="index, follow">
{%- else -%}
  <meta name="robots" content="noindex, nofollow">
{%- endunless -%}

{%- comment -%} Canonical URL (already included in theme.liquid but good practice) {%- endcomment -%}
{%- comment -%} <link rel="canonical" href="{{ canonical_url }}"> {%- endcomment -%}
